<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#000000">

    <!-- Suggested Words Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:id="@+id/suggested_word1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/suggested_1"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#424242"
            android:padding="8dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/suggested_word2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/suggested_2"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#424242"
            android:padding="8dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/suggested_word3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/suggested_3"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#424242"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <Button android:id="@+id/key_q" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Q" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_w" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="W" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_e" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="E" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_r" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="R" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_t" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="T" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_y" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Y" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_u" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="U" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_i" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="I" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_o" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="O" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_p" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="P" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <Button android:id="@+id/key_a" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="A" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:layout_marginStart="20dp"/>
        <Button android:id="@+id/key_s" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_d" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="D" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_f" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_g" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="G" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_h" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="H" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_j" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="J" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_k" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="K" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp"/>
        <Button android:id="@+id/key_l" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="L" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <!-- Third Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <!-- Toggle Uppercase/Lowercase Button -->
        <Button android:id="@+id/key_toggle_case" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="13dp" android:paddingVertical="8dp" android:drawableRight="@drawable/keyboard_capslock_24" android:paddingRight="6dp"/>
        <Button android:id="@+id/key_z" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Z" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_x" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="X" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_c" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="C" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_v" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="V" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_b" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="B" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_n" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="N" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_m" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="M" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="6dp" android:padding="8dp"/>
        <Button android:id="@+id/key_delete" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginStart="8dp" android:paddingVertical="8dp" android:drawableRight="@drawable/backspace" android:paddingRight="13dp"/>


    </LinearLayout>

    <!-- Fourth Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <Button android:id="@+id/key_space" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4" android:text="Space" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginEnd="4dp" android:layout_marginStart="70dp"/>
        <Button android:id="@+id/key_enter" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Enter" android:textColor="#FFFFFF" android:background="#424242" android:layout_marginStart="13dp"/>
    </LinearLayout>

</LinearLayout>


